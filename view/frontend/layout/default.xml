<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="minicart">
            <block class="Mageplaza\ShareCart\Block\ShareCart" name="mp.sharecart" template="Mageplaza_ShareCart::sharecart.phtml" after="-"/>
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="minicart_content" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="promotion" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                <item name="mp_sharecart" xsi:type="array">
                                    <item name="component" xsi:type="string">Mageplaza_ShareCart/js/view/minicart</item>
                                    <item name="config" xsi:type="array">
                                        <item name="componentDisabled" xsi:type="string">false</item>
                                    </item>
                                </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
